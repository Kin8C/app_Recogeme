<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="80dp"
    android:background="@color/Blanco"
    android:focusable="false"
    android:focusableInTouchMode="false"
    android:clickable="true"
    android:nestedScrollingEnabled="false">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Ciudad Destino"
        android:id="@+id/textCiudad"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:textColor="@color/Gris_Oscuro"
        android:layout_alignTop="@+id/textView14"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Estado de Recogida"
        android:id="@+id/textTipoEnvio"
        android:textColor="@color/Gris_Oscuro"
        android:layout_below="@+id/textView15"
        android:layout_alignLeft="@+id/textView15"
        android:layout_alignStart="@+id/textView15" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Fecha"
        android:id="@+id/textFecha"
        android:layout_marginRight="48dp"
        android:layout_marginEnd="48dp"
        android:textColor="@color/Gris_Oscuro"
        android:layout_below="@+id/textView16"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Ciudad Destino:"
        android:id="@+id/textView14"
        android:textSize="10dp"
        android:layout_marginTop="5dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/textCiudad"
        android:layout_alignStart="@+id/textCiudad" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Estado de Recogida:"
        android:id="@+id/textView15"
        android:textSize="10dp"
        android:layout_below="@+id/textCiudad"
        android:layout_alignLeft="@+id/textCiudad"
        android:layout_alignStart="@+id/textCiudad" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Fecha de Solicitud:"
        android:id="@+id/textView16"
        android:textSize="10dp"
        android:layout_below="@+id/textCiudad"
        android:layout_alignLeft="@+id/textFecha"
        android:layout_alignStart="@+id/textFecha" />

</RelativeLayout>
